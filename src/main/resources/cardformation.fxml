        -fx-border-color: #ccc; -fx-border-width: 1px; -fx-border-radius: 10px;
        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 2, 2);">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
         <children>
            <ImageView fx:id="imagecard" fitHeight="124.0" fitWidth="155.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </VBox>
      <VBox alignment="CENTER" prefHeight="300.0" prefWidth="428.0">
         <children>
            <Label fx:id="titleaff" alignment="CENTER" prefHeight="67.0" prefWidth="265.0" text="Title" textFill="#084ff5">
               <font>
                  <Font name="Arial" size="24.0" />
               </font>
            </Label>
            <Label fx:id="descriptionaff" alignment="CENTER" contentDisplay="TOP" layoutX="16.0" layoutY="68.0" prefHeight="72.0" prefWidth="265.0" text="Description">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Label>
            <Label fx:id="dateF" alignment="CENTER" contentDisplay="TOP" layoutX="10.0" layoutY="58.0" prefHeight="72.0" prefWidth="265.0" text="Date">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox prefHeight="98.0" prefWidth="209.0" spacing="5.0">
                     <children>
                        <Button fx:id="modifieraff" mnemonicParsing="false" onAction="#modifierFormation" prefHeight="26.0" prefWidth="152.0" text="Modifier formation" textFill="#365b9c">
                           <effect>
                              <ColorAdjust brightness="-0.09" contrast="0.21" hue="-0.9" saturation="0.54" />
                           </effect>
                        </Button>
                        <Button fx:id="supprimeraff" mnemonicParsing="false" onAction="#supprimerFormation" prefHeight="26.0" prefWidth="152.0" text="Supprimer Formation" textFill="#484f94">
                           <effect>
                              <ColorAdjust brightness="-0.52" contrast="0.85" hue="-0.04" saturation="0.54" />
                           </effect>
                        </Button>
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>
                  <VBox prefHeight="98.0" prefWidth="185.0" spacing="5.0">
                     <children>
                        <Button fx:id="ajouterressourceaff" mnemonicParsing="false" onAction="#ajouterRessource" prefHeight="26.0" prefWidth="146.0" text="Ajouter Ressource" textFill="#484f94">
                           <effect>
                              <ColorAdjust brightness="-0.09" contrast="0.21" hue="-0.9" saturation="0.54" />
                           </effect>
                        </Button>
                        <Button fx:id="afficher_ressource" mnemonicParsing="false" onAction="#afficherressourcebtn" prefHeight="26.0" prefWidth="146.0" text="Afficher Ressource" textFill="#276a89">
                           <effect>
                              <ColorAdjust brightness="-0.1" contrast="0.29" hue="-0.86" saturation="0.34" />
                           </effect>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
